<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".Activity.ReviseUserInformationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageButton
            android:id="@+id/btn_close_revise_user_information"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:src="@drawable/ic_close" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="회원정보 수정"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_profile_revise_user_information"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/ic_user_main" />

        <ImageButton
            android:id="@+id/btn_upload_image_revise_user_information"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-30dp"
            android:layout_marginTop="100dp"
            android:layout_toEndOf="@+id/img_profile_revise_user_information"
            android:background="@drawable/box_round_black_border"
            android:src="@drawable/ic_camera" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="178dp"
            android:text="이메일" />

        <EditText
            android:id="@+id/edit_email_revise_user_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="42dp"
            android:background="@drawable/box_round_gray_border"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:text="Name"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="41dp"
            android:layout_marginTop="272dp"
            android:text="닉네임" />

        <EditText
            android:id="@+id/edit_nickname_revise_user_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_marginStart="41dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="42dp"
            android:background="@drawable/box_round_gray_border"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:singleLine="true"
            android:text="Name"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_complete_revise_user_information"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorMain"
            android:text="수정 완료"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>