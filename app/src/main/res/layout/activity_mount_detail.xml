<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mountName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="OO산"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            app:srcCompat="@android:drawable/btn_dialog" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_writeReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="리뷰 작성" />

        <ImageView
            android:id="@+id/tv_mountThumbnail"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            tools:srcCompat="@drawable/ic_mountain_ranking_main" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp">

                <TableRow>

                    <TextView
                        android:id="@+id/tv_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="높이"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tv_mountHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OOOm"
                        android:textSize="15dp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="거리"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/tv_mountDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="O.Okm"
                        android:textSize="15dp" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:weightSum="1">

                    <RatingBar
                        android:id="@+id/rb_mountGrade"
                        style="@style/starRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:stepSize="0.1"
                        android:clickable="false"
                        android:focusable="false"
                        android:numStars="5" />

